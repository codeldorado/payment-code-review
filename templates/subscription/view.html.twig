{% extends 'base.html.twig' %}

{% block title %}Subscription Details{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h3>Subscription Details</h3>
                    <span class="badge bg-{{ subscription.isActive ? 'success' : 'secondary' }}">
                        {{ subscription.status|title }}
                    </span>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <h5>Basic Information</h5>
                            <table class="table table-borderless">
                                <tr>
                                    <td><strong>Subscription ID:</strong></td>
                                    <td><code>{{ subscription.uuid }}</code></td>
                                </tr>
                                <tr>
                                    <td><strong>Customer ID:</strong></td>
                                    <td>{{ subscription.customerId }}</td>
                                </tr>
                                <tr>
                                    <td><strong>Amount:</strong></td>
                                    <td>${{ subscription.amount|number_format(2) }} {{ subscription.currency }}</td>
                                </tr>
                                <tr>
                                    <td><strong>Frequency:</strong></td>
                                    <td>{{ subscription.frequency|title }}</td>
                                </tr>
                            </table>
                        </div>
                        <div class="col-md-6">
                            <h5>Billing Information</h5>
                            <table class="table table-borderless">
                                <tr>
                                    <td><strong>Created:</strong></td>
                                    <td>{{ subscription.createdAt|date('Y-m-d H:i:s') }}</td>
                                </tr>
                                <tr>
                                    <td><strong>Next Billing:</strong></td>
                                    <td>
                                        {% if subscription.nextBillingDate %}
                                            {{ subscription.nextBillingDate|date('Y-m-d H:i:s') }}
                                        {% else %}
                                            N/A
                                        {% endif %}
                                    </td>
                                </tr>
                                <tr>
                                    <td><strong>Last Billing:</strong></td>
                                    <td>
                                        {% if subscription.lastBillingDate %}
                                            {{ subscription.lastBillingDate|date('Y-m-d H:i:s') }}
                                        {% else %}
                                            Never
                                        {% endif %}
                                    </td>
                                </tr>
                                <tr>
                                    <td><strong>Billing Cycle:</strong></td>
                                    <td>{{ subscription.billingCycle }}</td>
                                </tr>
                            </table>
                        </div>
                    </div>

                    {% if subscription.cancelledAt %}
                        <div class="alert alert-warning mt-3">
                            <strong>Cancelled:</strong> This subscription was cancelled on {{ subscription.cancelledAt|date('Y-m-d H:i:s') }}
                        </div>
                    {% endif %}

                    {% if subscription.metadata %}
                        <div class="mt-3">
                            <h5>Metadata</h5>
                            <pre class="bg-light p-3 rounded"><code>{{ subscription.metadata }}</code></pre>
                        </div>
                    {% endif %}

                    <div class="mt-4 d-flex gap-2">
                        <a href="{{ path('app_subscription_index') }}" class="btn btn-secondary">Back to Subscriptions</a>
                        
                        {% if subscription.isActive %}
                            <form method="post" action="{{ path('app_subscription_cancel', {'uuid': subscription.uuid}) }}" class="d-inline">
                                <button type="submit" class="btn btn-danger" 
                                        onclick="return confirm('Are you sure you want to cancel this subscription?')">
                                    Cancel Subscription
                                </button>
                            </form>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}